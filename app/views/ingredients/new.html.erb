<%= render 'shared/page_title', title: "Maak nieuw Ingredient aan" %>

<%= render 'shared/errors', obj: @ingredient %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @ingredient do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      
      
      <%= f.submit 'Maak Ingredient aan', class: "btn btn-success" %>
      <% end %>
  </div>
</div>